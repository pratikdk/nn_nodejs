<html>
    <%- include("../partials/head.ejs") %>
    <body>
        <%- include("../partials/header.ejs") %>
        <div class="home content">
            <h2>All Blogs</h2>
            <% if (blogs.length > 0) {
                blogs.forEach((blog) => { %>
                    <a class="single" href="/blogs/<%=blog._id%>">
                    <h2 class="blog-title-collection"><%=blog.title%></h2>
                    <p class="blog-snippet-collection"><%=blog.snippet%></p>
                    </a>
                <% });
            } else { %>
                <p>No blogs to display</p>
            <% } %>
        </div>
        <%- include("../partials/footer.ejs") %>
    </body>
</html>